{% extends 'basebackoffice.html.twig' %}

{% block title %}Edit Transport{% endblock %}

{% block content %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Transport #{{ transport.id }}</h1>
                <p class="text-muted">Update the transport details below</p>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_transport_admin_index') }}">Transports</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <!-- Main Form Card -->
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-car-side mr-1 text-primary"></i>
                            Update Vehicle Information
                        </h3>
                    </div>
                    
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.carModel, 'Car Model', {'label_attr': {'class': 'form-label', 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Enter the vehicle model (e.g., Toyota Camry)'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-car"></i></span>
                                        </div>
                                        {{ form_widget(form.carModel, {'attr': {'class': 'form-control', 'placeholder': 'Enter car model', 'data-field': 'model'}}) }}
                                    </div>
                                    {{ form_errors(form.carModel) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.carColor, 'Car Color', {'label_attr': {'class': 'form-label', 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Enter the vehicle color (e.g., Blue)'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-palette"></i></span>
                                        </div>
                                        {{ form_widget(form.carColor, {'attr': {'class': 'form-control', 'placeholder': 'Enter car color', 'data-field': 'color'}}) }}
                                    </div>
                                    {{ form_errors(form.carColor) }}
                                    <div class="color-preview mt-1" id="color-preview"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.licensePlate, 'License Plate', {'label_attr': {'class': 'form-label', 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Enter the vehicle license plate number'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                        </div>
                                        {{ form_widget(form.licensePlate, {'attr': {'class': 'form-control', 'placeholder': 'Enter license plate', 'data-field': 'license'}}) }}
                                    </div>
                                    {{ form_errors(form.licensePlate) }}
                                    <div class="license-plate-preview mt-1" id="license-preview">
                                        <div class="license-plate">
                                            <span class="plate-text">{{ transport.licensePlate ?: 'Enter License' }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.maxLuggage, 'Max Luggage Capacity', {'label_attr': {'class': 'form-label', 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Enter the maximum number of standard suitcases (0-10)'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-suitcase"></i></span>
                                        </div>
                                        {{ form_widget(form.maxLuggage, {'attr': {'class': 'form-control', 'placeholder': 'Enter max luggage capacity', 'data-field': 'luggage', 'min': '0', 'max': '10'}}) }}
                                    </div>
                                    {{ form_errors(form.maxLuggage) }}
                                    <div class="luggage-preview mt-1">
                                        <div class="d-flex align-items-center">
                                            <div class="luggage-icons" id="luggage-icons"></div>
                                            <small class="text-muted ml-1">Standard suitcases</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vehicle Type Field -->
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.vehicleType, 'Vehicle Type', {'label_attr': {'class': 'form-label', 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Select the type of vehicle'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-car-side"></i></span>
                                        </div>
                                        {{ form_widget(form.vehicleType, {'attr': {'class': 'form-control', 'data-field': 'vehicleType'}}) }}
                                    </div>
                                    {{ form_errors(form.vehicleType) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_transport_admin_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary" id="save-btn">
                                <i class="fas fa-save mr-1"></i> {{ button_label|default('Save') }}
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Sidebar Card -->
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-1 text-info"></i>
                            Transport Requirements
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="callout callout-info mb-3">
                            <h5><i class="fas fa-clipboard-list mr-1"></i> Required Documentation</h5>
                            <ul class="requirements-list">
                                <li class="requirement-item">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Valid driving license
                                </li>
                                <li class="requirement-item">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Vehicle registration
                                </li>
                                <li class="requirement-item">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Insurance documentation
                                </li>
                                <li class="requirement-item">
                                    <i class="fas fa-check-circle text-success mr-1"></i>
                                    Background check clearance
                                </li>
                            </ul>
                        </div>
                        
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-lightbulb mr-1 text-warning"></i> Tips for Updates</h5>
                                <p class="card-text">Ensure all vehicle information is accurate to avoid delays in approval.</p>
                                <p class="card-text mb-0">Verify the license plate matches the vehicle registration.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
