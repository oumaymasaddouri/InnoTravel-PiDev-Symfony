{% extends 'basefrontoffice.html.twig' %}
{% block title %}{{ hotel.name }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Star rating styling */
    .star-rating {
        color: #ffc107;
        display: inline-block;
        margin-bottom: 15px;
    }

    .star-rating i {
        margin-right: 5px;
        font-size: 1.5rem;
        animation: starPulse 1.5s infinite alternate;
    }

    .star-rating i:nth-child(1) { animation-delay: 0s; }
    .star-rating i:nth-child(2) { animation-delay: 0.2s; }
    .star-rating i:nth-child(3) { animation-delay: 0.4s; }
    .star-rating i:nth-child(4) { animation-delay: 0.6s; }
    .star-rating i:nth-child(5) { animation-delay: 0.8s; }

    /* Animations */
    @keyframes starPulse {
        0% { transform: scale(1); }
        100% { transform: scale(1.2); }
    }

    @keyframes fadeIn {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .hotel-detail-card {
        animation: fadeIn 0.6s ease-in-out;
    }

    .hotel-detail-card h2 {
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .hotel-detail-card h4 {
        text-transform: uppercase;
        font-size: 1.1rem;
        color: #495057;
        margin-top: 20px;
        font-weight: 600;
    }

    /* Image placeholder styling */
    .image-placeholder {
        background-color: #f8f9fa;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .image-placeholder i {
        font-size: 4rem;
        color: #adb5bd;
        margin-bottom: 15px;
    }

    .image-placeholder span {
        color: #6c757d;
        font-size: 1rem;
    }
</style>
{% endblock %}

{% block section8 %}
<section class="featured-section s2 section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow p-4 hotel-detail-card">
                    <div class="wpo-section-title s2 text-center mb-4">
                        <span>// Hotel Details</span>
                        <h2>{{ hotel.name }}</h2>
                    </div>

                    {% if hotel.image %}
                        <div class="text-center mb-4">
                            <img src="{{ asset('uploads/hotels/' ~ hotel.image) }}" alt="{{ hotel.name }}" class="img-fluid rounded" style="max-height: 400px;">
                        </div>
                    {% else %}
                        <div class="image-placeholder">
                            <i class="fas fa-hotel"></i>
                            <span>No image available</span>
                        </div>
                    {% endif %}

                    <div class="text-center mb-4">
                        <div class="star-rating">
                            {% for i in 1..5 %}
                                {% if i <= hotel.rating %}
                                    <i class="fas fa-star"></i>
                                {% elseif i <= hotel.rating + 0.5 %}
                                    <i class="fas fa-star-half-alt"></i>
                                {% else %}
                                    <i class="far fa-star"></i>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <h3 class="text-primary mb-0">${{ hotel.pricepernight }} <small class="text-muted">/ night</small></h3>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h4><i class="ti-location-pin"></i> Location</h4>
                            <p>{{ hotel.location }}</p>
                        </div>

                        <div class="col-md-6">
                            <h4><i class="fas fa-leaf"></i> Eco Certification</h4>
                            <p>
                                {% if hotel.ecocertification %}
                                    <span class="badge bg-success">Certified</span>
                                {% else %}
                                    <span class="badge bg-secondary">Not Certified</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <h4><i class="fas fa-info-circle"></i> Description</h4>
                    <p>{{ hotel.description }}</p>

                    <div class="text-end mt-4">
                        <a href="{{ path('user_hotel_index') }}" class="btn btn-outline-primary">‚Üê Back to List</a>
                        <a href="{{ path('user_booking_new', { slug: hotel.slug }) }}" class="btn btn-primary">Book this Hotel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
