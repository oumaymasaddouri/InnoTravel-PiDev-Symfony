{# templates/feedback/edit.html.twig #}
{% extends 'basefrontoffice.html.twig' %}

{% block title %}Edit Feedback{% endblock %}

{% block section8 %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h2 class="text-center text-primary mb-4">‚úèÔ∏è Edit Your Feedback</h2>

                    {{ form_start(form) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.rating) }}
                            {{ form_widget(form.rating, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.rating) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            {{ form_errors(form.content) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('user_account') }}" class="btn btn-outline-secondary">‚Üê Cancel</a>
                            <button class="btn btn-primary">üíæ Update</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
