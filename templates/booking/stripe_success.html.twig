{% extends 'basefrontoffice.html.twig' %}

{% block title %}Payment Successful{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .success-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 40px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        text-align: center;
        animation: fadeIn 0.8s ease-in-out;
    }
    
    .success-icon {
        font-size: 80px;
        color: #28a745;
        margin-bottom: 20px;
    }
    
    .success-title {
        font-size: 32px;
        color: #333;
        margin-bottom: 20px;
    }
    
    .success-message {
        font-size: 18px;
        color: #666;
        margin-bottom: 30px;
    }
    
    .booking-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: left;
    }
    
    .booking-details h3 {
        color: #007bff;
        margin-bottom: 15px;
        font-size: 20px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }
    
    .booking-details p {
        margin-bottom: 10px;
    }
    
    .btn-view-bookings {
        background-color: #007bff;
        color: white;
        padding: 12px 30px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
    }
    
    .btn-view-bookings:hover {
        background-color: #0069d9;
        transform: translateY(-2px);
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
    
    @keyframes fadeIn {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }
</style>
{% endblock %}

{% block section8 %}
<div class="container">
    <div class="success-container">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        
        <h1 class="success-title">Payment Successful!</h1>
        
        <p class="success-message">
            Your booking has been confirmed and your payment has been processed successfully.
            A confirmation email will be sent to your registered email address.
        </p>
        
        {% if booking %}
        <div class="booking-details">
            <h3>Booking Details</h3>
            <p><strong>Hotel:</strong> {{ booking.hotelId.name }}</p>
            <p><strong>Check-in Date:</strong> {{ booking.startdate|date('Y-m-d') }}</p>
            <p><strong>Check-out Date:</strong> {{ booking.enddate|date('Y-m-d') }}</p>
            <p><strong>Status:</strong> <span class="badge bg-success">Confirmed</span></p>
        </div>
        {% endif %}
        
        <a href="{{ path('user_booking_index') }}" class="btn-view-bookings">
            View My Bookings
        </a>
    </div>
</div>
{% endblock %}
