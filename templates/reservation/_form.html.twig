{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }} {# Display global form errors #}
  <br>
    <label class="form-label">Select pickup and destination locations on the map</label>
       <div id="map"></div>
    <div class="map-toggle">
        <button type="button" class="pickup-btn">Set Pickup Location</button>
        <button type="button" class="destination-btn">Set Destination Location</button>
    </div>
 
      {{ form_row(form.pickup_address) }}
    {{ form_row(form.destination_address) }}
    {{ form_widget(form.pickupLatitude) }}
    {{ form_widget(form.pickupLongitude) }}
    {{ form_widget(form.destinationLatitude) }}
    {{ form_widget(form.destinationLongitude) }}
    {{ form_row(form.specialRequests) }}
    <button type="submit" class="custom-save-btn">
        {{ button_label|default('Save') }}
    </button>
{{ form_end(form) }}

<style>
.custom-save-btn {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s;
}

.custom-save-btn:hover {
    background-color: #45a049;
}

.error-message {
    color: #F44336;
    font-size: 14px;
    margin-bottom: 10px;
}

form .has-error {
    color: #F44336;
}

form .has-error input,
form .has-error textarea {
    border-color: #F44336;
    box-shadow: 0 0 0 3px rgba(244, 67, 54, 0.1);
}
</style>