{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap modal
            const deleteModal = document.querySelector('#deleteModal');
            if (deleteModal && typeof bootstrap !== 'undefined') {
                const modalInstance = new bootstrap.Modal(deleteModal, {
                    backdrop: 'static',
                    keyboard: true
                });

                // Handle form submission
                const deleteForm = deleteModal.querySelector('form.delete-form');
                const deleteButton = deleteForm.querySelector('button');

                deleteButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    this.classList.add('loading');
                    this.innerHTML = '<i class="ti-trash mr-1"></i> Deleting...';
                    this.disabled = true;

                    setTimeout(() => {
                        deleteForm.submit();
                    }, 500);
                });

                deleteModal.addEventListener('hidden.bs.modal', function() {
                    deleteButton.classList.remove('loading');
                    deleteButton.innerHTML = '<i class="ti-trash mr-1"></i> Delete';
                    deleteButton.disabled = false;
                });
            }

            // Color preview
            const colorInput = document.querySelector('#{{ form.carColor.vars.id }}');
            const colorPreview = document.getElementById('color-preview');
            if (colorInput && colorPreview) {
                const updateColorPreview = () => {
                    let color = colorInput.value.toLowerCase();
                    let hexColor = getColorHex(color);
                    colorPreview.innerHTML = '';

                    const colorSwatch = document.createElement('div');
                    colorSwatch.style.backgroundColor = hexColor;

                    const colorName = document.createElement('span');
                    colorName.textContent = color || 'Enter color';

                    colorPreview.appendChild(colorSwatch);
                    colorPreview.appendChild(colorName);
                };
                updateColorPreview();
                colorInput.addEventListener('input', updateColorPreview);
            }

            // License plate preview
            const licensePlateInput = document.querySelector('#{{ form.licensePlate.vars.id }}');
            const licensePlatePreview = document.getElementById('license-preview');
            if (licensePlateInput && licensePlatePreview) {
                licensePlateInput.addEventListener('input', function() {
                    const plateText = document.querySelector('.license-plate');
                    if (plateText) {
                        plateText.textContent = this.value || 'Enter License Plate';
                    }
                });
            }

            // Luggage capacity preview
            const luggageInput = document.querySelector('#{{ form.maxLuggage.vars.id }}');
            const luggageIcons = document.getElementById('luggage-preview');
            if (luggageInput && luggageIcons) {
                const updateLuggagePreview = () => {
                    const count = parseInt(luggageInput.value) || 0;
                    luggageIcons.innerHTML = '';

                    for (let i = 0; i < Math.min(count, 5); i++) {
                        const icon = document.createElement('i');
                        icon.className = 'ti-briefcase luggage-icon';
                        luggageIcons.appendChild(icon);
                    }

                    if (count > 5) {
                        const extraText = document.createElement('span');
                        extraText.textContent = `+${count - 5}`;
                        extraText.style.marginLeft = '4px';
                        extraText.style.color = '#6c757d';
                        extraText.style.fontSize = '13px';
                        luggageIcons.appendChild(extraText);
                    }
                };
                updateLuggagePreview();
                luggageInput.addEventListener('input', updateLuggagePreview);
            }

            // Form validation
            const form = document.querySelector('.needs-validation');
            form.addEventListener('submit', function(event) {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                this.classList.add('was-validated');
            });

            // Color helper function
            function getColorHex(colorName) {
                const colorMap = {
                    'red': '#ff0000',
                    'blue': '#0000ff',
                    'green': '#008000',
                    'yellow': '#ffff00',
                    'black': '#000000',
                    'white': '#ffffff',
                    'silver': '#c0c0c0',
                    'gray': '#808080',
                    'orange': '#ffa500',
                    'purple': '#800080',
                    'pink': '#ffc0cb',
                    'brown': '#a52a2a',
                    'beige': '#f5f5dc',
                    'gold': '#ffd700',
                    'navy': '#000080',
                    'teal': '#008080'
                };
                return colorMap[colorName] || '#cccccc';
            }
        });
    </script>
