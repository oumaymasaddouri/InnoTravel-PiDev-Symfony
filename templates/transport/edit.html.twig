{% extends 'basefrontoffice.html.twig' %}

{% block title %}Edit transport{% endblock %}

{% block section8 %}
<div class="transport-edit-wrapper">
    <div class="transport-edit-header">
        <h1>Edit transport</h1>
        <div class="header-actions">
            <a href="{{ path('app_transport_index') }}" class="back-btn">
                <i class="ti-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    
    <div class="transport-edit-container">
        <div class="transport-edit-icon">
            <i class="ti-pencil"></i>
        </div>
        
        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                <div class="form-group">
                    {{ form_label(form.carModel, 'Car Model', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-group">
                        <span class="input-group-text"><i class="ti-car"></i></span>
                        {{ form_widget(form.carModel, {'attr': {'class': 'form-input', 'placeholder': 'Enter car model'}}) }}
                    </div>
                    {{ form_errors(form.carModel) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.carColor, 'Car Color', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-group">
                        <span class="input-group-text"><i class="ti-palette"></i></span>
                        {{ form_widget(form.carColor, {'attr': {'class': 'form-input', 'placeholder': 'Enter car color'}}) }}
                    </div>
                    {{ form_errors(form.carColor) }}
                    <div class="color-preview mt-2" id="color-preview"></div>
                </div>
                <div class="form-group">
                    {{ form_label(form.licensePlate, 'License Plate', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-group">
                        <span class="input-group-text"><i class="ti-id-badge"></i></span>
                        {{ form_widget(form.licensePlate, {'attr': {'class': 'form-input', 'placeholder': 'Enter license plate'}}) }}
                    </div>
                    {{ form_errors(form.licensePlate) }}
                    <div class="license-plate-preview mt-2" id="license-preview">
                        <span class="license-plate">{{ transport.licensePlate ?: 'Enter License Plate' }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.maxLuggage, 'Max Luggage', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-group">
                        <span class="input-group-text"><i class="ti-briefcase"></i></span>
                        {{ form_widget(form.maxLuggage, {'attr': {'class': 'form-input', 'placeholder': 'Enter max luggage capacity'}}) }}
                    </div>
                    {{ form_errors(form.maxLuggage) }}
                    <div class="luggage-preview mt-2" id="luggage-preview"></div>
                </div>
                <div class="form-group">
                    {{ form_label(form.vehicleType, 'Vehicle Type', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-group">
                        <span class="input-group-text"><i class="ti-truck"></i></span>
                        {{ form_widget(form.vehicleType, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    {{ form_errors(form.vehicleType) }}
                </div>
                <button type="submit" class="custom-save-btn">
                    {{ button_label|default('Save') }}
                </button>
            {{ form_end(form) }}
        </div>
        
        <div class="delete-container">
            <hr class="divider">
            <button type="button" class="delete-btn" data-toggle="modal" data-target="#deleteModal">
                Delete this transport
            </button>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="deleteModalLabel">
                        <i class="ti-alert mr-2"></i> Confirm Deletion
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning d-flex align-items-start" role="alert">
                        <i class="ti-warning text-warning mr-3 mt-1" style="font-size: 1.5rem;"></i>
                        <div>
                            <p class="mb-2">Are you sure you want to delete this transport?</p>
                            <p class="text-muted mb-0"><small>This action cannot be undone. Please be certain.</small></p>
                        </div>
                    </div>
                    <div class="transport-info">
                        <p><strong>Vehicle:</strong> {{ transport.carModel }} ({{ transport.carColor }})</p>
                        <p><strong>License Plate:</strong> {{ transport.licensePlate }}</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    {{ include('transport/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

