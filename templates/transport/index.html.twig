{% extends 'basefrontoffice.html.twig' %}

{% block title %}transport index{% endblock %}

{% block section8 %}
<div class="transport-index-wrapper">
    <div class="transport-index-header">
        <h1>transport Management</h1>
        <a href="{{ path('app_transport_new') }}" class="create-btn">
            <i class="ti-plus"></i> Create new transport
        </a>
    </div>
    
    <!-- Improved Search Bar Section -->
    <div class="search-card">
        <div class="search-bar-wrapper">
            <div class="search-bar">
                <i class="ti-search search-icon"></i>
                <input type="text" id="transportSearch" placeholder="Search transports..." class="search-input">
                <button id="clearSearch" class="clear-search-btn">
                    <i class="ti-close"></i>
                </button>
            </div>
            
            <div class="search-actions">
                <div class="filter-dropdown">
                    <select id="filterOption" class="filter-select">
                        <option value="all">All Fields</option>
                        <option value="carModel">Car Model</option>
                        <option value="carColor">Car Color</option>
                        <option value="licensePlate">License Plate</option>
                    </select>
                    <i class="ti-angle-down select-icon"></i>
                </div>
                
                <button id="advancedFilterBtn" class="advanced-filter-btn">
                    <i class="ti-sliders"></i> Advanced
                </button>
            </div>
        </div>
        
        <!-- Advanced Filter Panel (Hidden by default) -->
        <div id="advancedFilterPanel" class="advanced-filter-panel">
            <div class="filter-panel-header">
                <h3>Advanced Filters</h3>
                <button id="closeAdvancedFilter" class="close-panel-btn">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div class="filter-groups">
                <div class="filter-group">
                    <label for="maxLuggageFilter">Max Luggage Capacity</label>
                    <div class="range-slider-container">
                        <div class="range-inputs">
                            <div class="range-input-group">
                                <span class="range-label">Min</span>
                                <input type="number" id="minLuggage" placeholder="0" class="filter-input" min="0">
                            </div>
                            <div class="range-separator"></div>
                            <div class="range-input-group">
                                <span class="range-label">Max</span>
                                <input type="number" id="maxLuggage" placeholder="100" class="filter-input" min="0">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="filter-actions">
                <button id="resetFilters" class="reset-filter-btn">Reset</button>
                <button id="applyFilters" class="apply-filter-btn">Apply Filters</button>
            </div>
        </div>
    </div>
    
    <div class="transport-table-container">
        <div class="table-icon">
            <i class="ti-car"></i>
        </div>
        
        {% if transports|length > 0 %}
        <div class="table-responsive">
            <div class="table-header">
                <div id="searchResultInfo" class="search-result-info">
                    <div class="result-count-badge">
                        <span id="resultCount">{{ transports|length }}</span>
                    </div>
                    <span class="result-text">transports found</span>
                </div>
                <div class="table-actions">
                    <button id="refreshTable" class="refresh-btn">
                        <i class="ti-reload"></i> Refresh
                    </button>
                </div>
            </div>
            
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Car Model</th>
                        <th>Car Color</th>
                        <th>License Plate</th>
                        <th>Max Luggage</th>
                        <th class="actions-column">Actions</th>
                    </tr>
                </thead>
                <tbody id="transportTableBody">
                {% for transport in transports %}
                    <tr class="transport-row">
                        <td>{{ transport.id }}</td>
                        <td>{{ transport.carModel }}</td>
                        <td>{{ transport.carColor }}</td>
                        <td>{{ transport.licensePlate }}</td>
                        <td>{{ transport.maxLuggage }}</td>
                        <td class="actions-column">
                            <div class="action-buttons">
                                <a href="{{ path('app_transport_show', {'id': transport.id}) }}" class="view-btn">
                                    <i class="ti-eye"></i> View
                                </a>
                                <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="edit-btn">
                                    <i class="ti-pencil"></i> Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div id="noSearchResults" class="no-records" style="display: none;">
            <div class="no-results-content">
                <div class="no-records-icon">
                    <i class="ti-search"></i>
                </div>
                <h3>No matching transports</h3>
                <p>We couldn't find any transports matching your search criteria.</p>
                <button id="resetSearch" class="reset-search-btn">
                    <i class="ti-reload"></i> Reset Search
                </button>
            </div>
        </div>
        {% else %}
        <div class="no-records">
            <div class="no-records-icon">
                <i class="ti-alert"></i>
            </div>
            <h3>No transports found</h3>
            <p>There are no transport records in the system.</p>
        </div>
        {% endif %}
    </div>
</div>

