<script>
    document.addEventListener('DOMContentLoaded', function() {
        // DOM Elements
        const searchInput = document.getElementById('transportSearch');
        const filterSelect = document.getElementById('filterOption');
        const clearSearchBtn = document.getElementById('clearSearch');
        const advancedFilterBtn = document.getElementById('advancedFilterBtn');
        const closeAdvancedFilterBtn = document.getElementById('closeAdvancedFilter');
        const advancedFilterPanel = document.getElementById('advancedFilterPanel');
        const applyFiltersBtn = document.getElementById('applyFilters');
        const resetFiltersBtn = document.getElementById('resetFilters');
        const resetSearchBtn = document.getElementById('resetSearch');
        const refreshTableBtn = document.getElementById('refreshTable');
        const tableBody = document.getElementById('transportTableBody');
        const noSearchResults = document.getElementById('noSearchResults');
        const resultCount = document.getElementById('resultCount');
        const searchResultInfo = document.getElementById('searchResultInfo');
        
        const transportRows = document.querySelectorAll('.transport-row');
        let minLuggage, maxLuggage;
        let advancedFilterOpen = false;
        
        // Show/hide clear button based on search input
        searchInput.addEventListener('input', function() {
            clearSearchBtn.style.display = this.value.length > 0 ? 'flex' : 'none';
            filterTable();
        });
        
        // Clear search input
        clearSearchBtn.addEventListener('click', function() {
            searchInput.value = '';
            clearSearchBtn.style.display = 'none';
            filterTable();
        });
        
        // Reset search from no results message
        if (resetSearchBtn) {
            resetSearchBtn.addEventListener('click', function() {
                searchInput.value = '';
                clearSearchBtn.style.display = 'none';
                
                // Reset advanced filters
                if (document.getElementById('minLuggage')) {
                    document.getElementById('minLuggage').value = '';
                }
                if (document.getElementById('maxLuggage')) {
                    document.getElementById('maxLuggage').value = '';
                }
                
                minLuggage = '';
                maxLuggage = '';
                filterTable();
            });
        }
        
        // Toggle advanced filter panel
        advancedFilterBtn.addEventListener('click', function() {
            advancedFilterOpen = !advancedFilterOpen;
            advancedFilterPanel.style.display = advancedFilterOpen ? 'block' : 'none';
            
            // Add slide-down animation
            if (advancedFilterOpen) {
                advancedFilterPanel.style.height = '0';
                advancedFilterPanel.style.opacity = '0';
                setTimeout(() => {
                    advancedFilterPanel.style.height = 'auto';
                    advancedFilterPanel.style.opacity = '1';
                }, 10);
            }
        });
        
        // Close advanced filter panel with close button
        if (closeAdvancedFilterBtn) {
            closeAdvancedFilterBtn.addEventListener('click', function() {
                advancedFilterOpen = false;
                advancedFilterPanel.style.display = 'none';
            });
        }
        
        // Apply advanced filters
        if (applyFiltersBtn) {
            applyFiltersBtn.addEventListener('click', function() {
                minLuggage = document.getElementById('minLuggage').value;
                maxLuggage = document.getElementById('maxLuggage').value;
                advancedFilterOpen = false;
                advancedFilterPanel.style.display = 'none';
                filterTable();
            });
        }
        
        // Reset advanced filters
        if (resetFiltersBtn) {
            resetFiltersBtn.addEventListener('click', function() {
                document.getElementById('minLuggage').value = '';
                document.getElementById('maxLuggage').value = '';
                minLuggage = '';
                maxLuggage = '';
                filterTable();
            });
        }
        
