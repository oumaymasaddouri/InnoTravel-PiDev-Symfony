{% extends 'basebackoffice.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Admin Dashboard</h1>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Users</h5>
                            <p class="mb-0">Manage users</p>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ path('admin_users_index') }}">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Events</h5>
                            <p class="mb-0">Manage events</p>
                        </div>
                        <i class="fas fa-calendar-alt fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ path('admin_events_index') }}">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Organizers</h5>
                            <p class="mb-0">Manage organizers</p>
                        </div>
                        <i class="fas fa-building fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ path('admin_organizers_index') }}">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Statistics</h5>
                            <p class="mb-0">User analytics</p>
                        </div>
                        <i class="fas fa-chart-pie fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ path('admin_users_statistics') }}">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-xl-6">
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="{{ path('admin_users_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-users me-2 text-info"></i> Manage Users
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                        <a href="{{ path('admin_users_statistics') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-chart-pie me-2 text-warning"></i> View User Statistics
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                        <a href="{{ path('admin_trip_statistics') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-plane me-2 text-info"></i> View Trip Statistics
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                        <a href="{{ path('admin_events_new') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-plus-circle me-2 text-primary"></i> Create New Event
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                        <a href="{{ path('admin_organizers_new') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-plus-circle me-2 text-success"></i> Create New Organizer
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> System Information</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">Welcome to the InnoTravel Admin Dashboard. From here, you can manage all aspects of your travel platform.</p>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>PHP Version:</strong> {{ constant('PHP_VERSION') }}</p>
                            <p><strong>Server:</strong> {{ app.request.server.get('SERVER_SOFTWARE') }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Symfony Version:</strong> {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</p>
                            <p><strong>Environment:</strong> {{ app.environment }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

