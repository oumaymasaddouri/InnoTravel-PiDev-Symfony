{% block js %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const isDarkMode = document.body.classList.contains('dark-mode');
            
            // Modern color palette matching Transport Management, adjusted for dark mode
            const colors = [
                isDarkMode ? 'rgba(106, 137, 204, 0.8)' : 'rgba(59, 130, 246, 0.8)',  // Blue
                isDarkMode ? 'rgba(76, 175, 80, 0.8)' : 'rgba(16, 185, 129, 0.8)',     // Green (Confirmed)
                isDarkMode ? 'rgba(255, 152, 0, 0.8)' : 'rgba(249, 115, 22, 0.8)',     // Orange
                isDarkMode ? 'rgba(159, 122, 234, 0.8)' : 'rgba(139, 92, 246, 0.8)',   // Purple
                isDarkMode ? 'rgba(255, 215, 0, 0.8)' : 'rgba(234, 179, 8, 0.8)',      // Yellow (Pending)
                isDarkMode ? 'rgba(239, 83, 80, 0.8)' : 'rgba(239, 68, 68, 0.8)',      // Red (Cancelled)
                isDarkMode ? 'rgba(28, 202, 216, 0.8)' : 'rgba(14, 165, 233, 0.8)',    // Light Blue
                isDarkMode ? 'rgba(92, 107, 192, 0.8)' : 'rgba(79, 70, 229, 0.8)',     // Indigo
                isDarkMode ? 'rgba(244, 143, 177, 0.8)' : 'rgba(236, 72, 153, 0.8)'    // Pink
            ];

            // Bar Chart: Reservation Status
            const barCtx = document.getElementById('barChart').getContext('2d');
            new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: {{ statusStats|map(v => v.status)|json_encode|raw }},
                    datasets: [{
                        label: 'Reservations by Status',
                        data: {{ statusStats|map(v => v.count)|json_encode|raw }},
                        backgroundColor: [
                            isDarkMode ? 'rgba(76, 175, 80, 0.8)' : 'rgba(16, 185, 129, 0.8)',  // Confirmed - Green
                            isDarkMode ? 'rgba(255, 215, 0, 0.8)' : 'rgba(234, 179, 8, 0.8)',    // Pending - Yellow
                            isDarkMode ? 'rgba(239, 83, 80, 0.8)' : 'rgba(239, 68, 68, 0.8)'     // Cancelled - Red
                        ],
                        borderColor: [
                            isDarkMode ? 'rgba(76, 175, 80, 1)' : 'rgba(16, 185, 129, 1)',
                            isDarkMode ? 'rgba(255, 215, 0, 1)' : 'rgba(234, 179, 8, 1)',
                            isDarkMode ? 'rgba(239, 83, 80, 1)' : 'rgba(239, 68, 68, 1)'
                        ],
                        borderWidth: 1,
                        borderRadius: 10,
                        maxBarThickness: 40
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: isDarkMode ? 'rgba(0, 0, 0, 0.9)' : 'rgba(0, 0, 0, 0.85)',
                            bodyFont: { size: 14, family: 'Poppins' },
                            titleFont: { size: 16, family: 'Poppins', weight: '600' },
                            padding: 12,
                            cornerRadius: 8,
                            callbacks: {
                                label: function(context) {
                                    return `${context.parsed.y} ${context.label.toLowerCase()} reservations`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: isDarkMode ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.05)',
                                drawBorder: false
                            },
                            ticks: {
                                font: { size: 12, family: 'Poppins' },
                                color: isDarkMode ? '#a0a0a0' : '#6c757d',
                                precision: 0,
                                stepSize: 1
                            },
                            title: {
                                display: true,
                                text: 'Number of Reservations',
                                font: { size: 14, family: 'Poppins', weight: '600' },
                                color: isDarkMode ? '#e0e0e0' : '#344767'
                            }
                        },
                        x: {
                            grid: { display: false },
                            ticks: {
                                font: { size: 12, family: 'Poppins' },
                                color: isDarkMode ? '#a0a0a0' : '#6c757d'
                            },
                            title: {
                                display: true,
                                text: 'Reservation Status',
                                font: { size: 14, family: 'Poppins', weight: '600' },
                                color: isDarkMode ? '#e0e0e0' : '#344767'
                            }
                        }
                    },
                    animation: {
                        duration: 1500,
                        easing: 'easeOutQuart'
                    }
                }
            });
        });
    </script>
{% endblock %}