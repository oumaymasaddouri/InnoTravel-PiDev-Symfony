{% extends 'basebackoffice.html.twig' %}

{% block title %}Reservation Details{% endblock %}

{% block content %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Reservation #{{ reservation.id }}</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{ path('app_reservation_admin_index') }}">Reservations</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-1 text-primary"></i>
                            Reservation Details
                        </h3>
                        <div class="card-tools">
                            <span class="status-circle status-{{ reservation.status|lower }}">
                                {{ reservation.status }}
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Accordion for Reservation Details -->
                        <div id="accordion">
                            <!-- General Info -->
                            <div class="card">
                                <div class="card-header" id="headingGeneral">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseGeneral" aria-expanded="true" aria-controls="collapseGeneral">
                                            General Information
                                        </button>
                                    </h5>
                                </div>
                                <div id="collapseGeneral" class="collapse show" aria-labelledby="headingGeneral" data-parent="#accordion">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="detail-item">
                                                    <i class="fas fa-map-marker-alt text-primary mr-1"></i>
                                                    <span class="detail-label">Pickup:</span>
                                                    <span class="detail-value" data-tooltip="{{ reservation.pickupAddress }}">{{ reservation.pickupAddress }}</span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="detail-item">
                                                    <i class="fas fa-flag-checkered text-danger mr-1"></i>
                                                    <span class="detail-label">Destination:</span>
                                                    <span class="detail-value" data-tooltip="{{ reservation.destinationAddress }}">{{ reservation.destinationAddress }}</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-md-4">
                                                <div class="detail-item">
                                                    <i class="fas fa-calendar-alt text-info mr-1"></i>
                                                    <span class="detail-label">Created:</span>
                                                    <span class="detail-value">{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i') : 'N/A' }}</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="detail-item">
                                                    <i class="fas fa-clock text-warning mr-1"></i>
                                                    <span class="detail-label">Duration:</span>
                                                    <span class="detail-value">{{ reservation.estimatedDuration ? reservation.estimatedDuration ~ ' min' : 'N/A' }}</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="detail-item">
                                                    <i class="fas fa-tag text-primary mr-1"></i>
                                                    <span class="detail-label">Price:</span>
                                                    <span class="detail-value">{{ reservation.price ? reservation.price ~ ' €' : 'N/A' }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Special Requests -->
                            {% if reservation.specialRequests %}
                            <div class="card">
                                <div class="card-header" id="headingSpecial">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseSpecial" aria-expanded="false" aria-controls="collapseSpecial">
                                            Special Requests
                                        </button>
                                    </h5>
                                </div>
                                <div id="collapseSpecial" class="collapse" aria-labelledby="headingSpecial" data-parent="#accordion">
                                    <div class="card-body">
                                        <p>{{ reservation.specialRequests }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>

                        <!-- Status Log -->
                        <div class="mt-3">
                            <h5 class="mb-2"><i class="fas fa-history mr-1 text-primary"></i> Status Log</h5>
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span class="badge badge-{{ reservation.status == 'pending' ? 'warning' : (reservation.status == 'accepted' ? 'success' : (reservation.status == 'Completed' ? 'primary' : 'secondary')) }}">
                                                {{ reservation.status }}
                                            </span>
                                        </td>
                                        <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i') : 'N/A' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Actions -->
                        <div class="mt-3">
                            <h5 class="mb-2"><i class="fas fa-tools mr-1 text-primary"></i> Actions</h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <a href="{{ path('app_reservation_admin_index') }}" class="btn btn-secondary btn-block mb-2">
                                        <i class="fas fa-arrow-left mr-1"></i> Back
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a href="{{ path('app_reservation_admin_edit', {'id': reservation.id}) }}" class="btn btn-primary btn-block mb-2">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class="btn btn-danger btn-block mb-2" data-toggle="modal" data-target="#delete-modal">
                                        <i class="fas fa-trash mr-1"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Modal -->
<div class="modal fade" id="delete-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title">Confirm Deletion</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-exclamation-triangle text-warning fa-lg mr-2"></i>
                    <div>
                        <p class="mb-1">Are you sure you want to delete this reservation?</p>
                        <p class="text-danger mb-0"><small>This action cannot be undone.</small></p>
                    </div>
                </div>
                <div class="alert alert-warning">
                    <strong>ID:</strong> #{{ reservation.id }}<br>
                    <strong>Pickup:</strong> {{ reservation.pickupAddress }}<br>
                    <strong>Destination:</strong> {{ reservation.destinationAddress }}
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                {{ include('reservation_admin/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block css %}
