{% extends 'basefrontoffice.html.twig' %}

{% block title %}Update Trip{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            margin-bottom: 30px;
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }
        .card-header {
            background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
            border-bottom: none;
            padding: 25px;
            color: white;
        }
        .card-title {
            font-weight: 700;
            letter-spacing: 0.5px;
            margin: 0;
        }
        .card-body {
            padding: 35px;
            background-color: #fff;
        }
        .form-group {
            margin-bottom: 25px;
            position: relative;
        }
        .form-label {
            font-weight: 600;
            color: #444;
            margin-bottom: 10px;
            display: block;
            font-size: 15px;
        }
        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            padding: 14px 18px;
            font-size: 15px;
            transition: all 0.3s;
            background-color: #f9f9f9;
        }
        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            border-color: #86b7fe;
            background-color: #fff;
        }
        .btn-back {
            margin-bottom: 25px;
            padding: 12px 20px;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s;
            border: 2px solid #0d6efd;
            color: #0d6efd;
            background-color: transparent;
        }
        .btn-back:hover {
            background-color: #0d6efd;
            color: white;
            transform: translateY(-3px);
        }
        .btn-action {
            padding: 14px 30px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
            letter-spacing: 0.5px;
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            border: none;
        }
        .btn-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(13, 110, 253, 0.2);
        }
        .btn-action i {
            margin-right: 10px;
        }
        .section-title {
            font-weight: 700;
            color: #333;
            margin-bottom: 25px;
            position: relative;
            display: inline-block;
            font-size: 20px;
        }
        .section-title:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 4px;
            background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
            border-radius: 2px;
        }
        .itineraries-container {
            max-height: 450px;
            overflow-y: auto;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 15px;
            background-color: #f9f9f9;
            scrollbar-width: thin;
            scrollbar-color: #0d6efd #f0f0f0;
        }
        .itineraries-container::-webkit-scrollbar {
            width: 8px;
        }
        .itineraries-container::-webkit-scrollbar-track {
            background: #f0f0f0;
            border-radius: 10px;
        }
        .itineraries-container::-webkit-scrollbar-thumb {
            background-color: #0d6efd;
            border-radius: 10px;
        }
        .form-check {
            margin-bottom: 20px;
            padding: 0;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            background-color: white;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            transition: all 0.3s;
            position: relative;
        }
        .form-check:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            transform: translateY(-3px);
            border-color: #0d6efd;
        }
        .form-check-input {
            width: 24px;
            height: 24px;
            cursor: pointer;
            border-color: #0d6efd;
            border-width: 2px;
            flex-shrink: 0;
            margin: 0;
            position: relative;
            top: 0;
        }
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.35);
            transform: scale(1.1);
        }
        .form-check-label {
            cursor: pointer;
            width: 100%;
            padding: 0;
            margin: 0;
        }
        .itinerary-details {
            color: #555;
            line-height: 1.6;
        }
        .selected-itinerary {
            transform: translateY(-3px);
            transition: all 0.3s ease;
        }
        .selected-itinerary .form-check-label {
            color: #0d6efd;
            font-weight: 500;
        }
        .selected-itinerary .itinerary-details {
            color: #333;
        }
        .itinerary-details p {
            margin-bottom: 8px;
        }
        .itinerary-details strong {
            color: #444;
            margin-right: 5px;
            font-weight: 600;
        }
        .invalid-feedback {
            display: block;
            width: 100%;
            margin-top: 0.5rem;
            font-size: 0.875em;
            color: #dc3545;
            font-weight: 500;
        }
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }
        .alert-success {
            background-color: #d1e7dd;
            color: #0f5132;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #842029;
        }
        .alert-warning {
            background-color: #fff3cd;
            color: #664d03;
        }
        .required-indicator {
            color: #dc3545;
            margin-left: 3px;
        }
    </style>
{% endblock %}

{% block section8 %}

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <a href="{{ path('trip_itinerary_user') }}" class="btn btn-back">
                    <i class="fa fa-arrow-left me-2"></i> Back to Trips
                </a>

                {% include "admin/includes/flashes.twig" %}

                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-5">
                        <h2 class="mb-4 text-primary fw-bold text-center">‚úèÔ∏è Update Your Trip</h2>
                        <p class="text-center text-muted mb-4">Modify your trip details and itineraries below.</p>
                        {{ form_start(trip_form, {'attr': {'class': 'needs-validation', 'id': 'trip-form'}}) }}
                            <div class="row">
                                <div class="col-lg-6">
                                    <h3 class="mb-4 fs-5 fw-bold">Trip Details</h3>

                                    <div class="form-group">
                                        {{ form_label(trip_form.departure, 'Departure Date & Time', {'label_attr': {'class': 'form-label'}}) }}
                                        <span class="required-indicator">*</span>
                                        {{ form_widget(trip_form.departure, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                        {% if form_errors(trip_form.departure) %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(trip_form.departure) }}
                                            </div>
                                        {% endif %}
                                        <small class="form-text">Select when you plan to start your trip</small>
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(trip_form.arrivalDate, 'Arrival Date & Time', {'label_attr': {'class': 'form-label'}}) }}
                                        <span class="required-indicator">*</span>
                                        {{ form_widget(trip_form.arrivalDate, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                        {% if form_errors(trip_form.arrivalDate) %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(trip_form.arrivalDate) }}
                                            </div>
                                        {% endif %}
                                        <small class="form-text">Select when you plan to end your trip</small>
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(trip_form.budget, 'Budget (TND)', {'label_attr': {'class': 'form-label'}}) }}
                                        <span class="required-indicator">*</span>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fa fa-money-bill"></i></span>
                                            {{ form_widget(trip_form.budget, {'attr': {'class': 'form-control', 'placeholder': 'Enter your budget in TND', 'required': 'required'}}) }}
                                        </div>
                                        {% if form_errors(trip_form.budget) %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(trip_form.budget) }}
                                            </div>
                                        {% endif %}
                                        <small class="form-text">Enter your estimated budget for this trip</small>
                                    </div>

                                    <div class="alert alert-info mt-4">
                                        <i class="fa fa-info-circle me-2"></i> Your updated trip will be submitted for review again.
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h3 class="mb-0 fs-5 fw-bold">Select Itineraries</h3>
                                        <span class="badge bg-success" id="selected-count">{{ selectedItineraryIds|length }} selected</span>
                                    </div>

                                    <div class="alert alert-warning mb-3">
                                        <i class="fa fa-exclamation-triangle me-2"></i> Please select at least one itinerary for your trip
                                    </div>

                                    <div class="itineraries-container">
                                        {% for itineraire in itineraires %}
                                            <div class="form-check d-flex align-items-start p-3 mb-3">
                                                <div style="min-width: 24px; margin-right: 15px;">
                                                    <input class="form-check-input itinerary-checkbox" type="checkbox" name="itineraries[]" value="{{ itineraire.id }}" id="itineraire{{ itineraire.id }}" {% if itineraire.id in selectedItineraryIds %}checked{% endif %}>
                                                </div>
                                                <label class="form-check-label w-100" for="itineraire{{ itineraire.id }}">
                                                    <div class="fw-bold text-primary mb-2">{{ itineraire.name }}</div>
                                                    <div class="itinerary-details border-top border-light pt-2 mt-2">
                                                        <p><strong>üìÖ Day Program:</strong> {{ itineraire.dayProgram }}</p>
                                                        <p><strong>üéØ Activities:</strong> {{ itineraire.activity }}</p>
                                                    </div>
                                                </label>
                                            </div>
                                        {% else %}
                                            <div class="text-center py-5">
                                                <i class="fa fa-info-circle fa-3x text-muted mb-3"></i>
                                                <h5>No itineraries available</h5>
                                                <p class="text-muted">Please contact an administrator to add itineraries.</p>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center mt-5">
                                <button type="submit" class="btn btn-primary btn-action btn-lg">
                                    <i class="fa fa-save"></i> Update My Trip
                                </button>
                            </div>
                        {{ form_end(trip_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize highlighting for selected itineraries
            updateSelectedCount();

            // Add validation before form submission
            document.getElementById('trip-form').addEventListener('submit', function(e) {
                const checkboxes = document.querySelectorAll('.itinerary-checkbox:checked');
                if (checkboxes.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one itinerary for your trip.');
                    document.querySelector('.itineraries-container').scrollIntoView({ behavior: 'smooth' });
                }
            });

            // Add event listeners to all checkboxes
            const checkboxes = document.querySelectorAll('.itinerary-checkbox');
            checkboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', updateSelectedCount);
            });

            // Make the entire label clickable for better UX
            const labels = document.querySelectorAll('.form-check-label');
            labels.forEach(function(label) {
                label.addEventListener('click', function(e) {
                    // Prevent default to avoid double-triggering the checkbox
                    e.preventDefault();

                    // Get the associated checkbox
                    const checkboxId = this.getAttribute('for');
                    const checkbox = document.getElementById(checkboxId);

                    // Toggle the checkbox
                    checkbox.checked = !checkbox.checked;

                    // Update the counter and highlighting
                    updateSelectedCount();
                });
            });
        });

        function updateSelectedCount() {
            const count = document.querySelectorAll('.itinerary-checkbox:checked').length;
            const countElement = document.getElementById('selected-count');
            countElement.textContent = count + ' selected';

            // Update badge color based on selection
            if (count === 0) {
                countElement.className = 'badge bg-danger';
            } else {
                countElement.className = 'badge bg-success';
            }

            // Highlight selected itineraries
            const checkboxes = document.querySelectorAll('.itinerary-checkbox');
            checkboxes.forEach(function(checkbox) {
                const formCheck = checkbox.closest('.form-check');

                // Ensure transition is applied for smooth visual changes
                formCheck.style.transition = 'all 0.3s ease';

                if (checkbox.checked) {
                    formCheck.style.borderColor = '#0d6efd';
                    formCheck.style.borderWidth = '3px';
                    formCheck.style.backgroundColor = '#e6f0ff';
                    formCheck.style.boxShadow = '0 5px 15px rgba(13, 110, 253, 0.2)';
                    formCheck.classList.add('selected-itinerary');

                    // Add a darker background to make selection more obvious
                    const nameElement = formCheck.querySelector('.fw-bold');
                    if (nameElement) {
                        nameElement.style.color = '#0b5ed7';
                        nameElement.style.fontSize = '1.1em';
                    }
                } else {
                    formCheck.style.borderColor = '#e0e0e0';
                    formCheck.style.borderWidth = '1px';
                    formCheck.style.backgroundColor = 'white';
                    formCheck.style.boxShadow = '0 3px 10px rgba(0,0,0,0.05)';
                    formCheck.classList.remove('selected-itinerary');

                    // Reset text styling
                    const nameElement = formCheck.querySelector('.fw-bold');
                    if (nameElement) {
                        nameElement.style.color = '#0d6efd';
                        nameElement.style.fontSize = '1em';
                    }
                }
            });
        }
    </script>
{% endblock %}
