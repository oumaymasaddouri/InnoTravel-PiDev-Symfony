{% extends 'basefrontoffice.html.twig' %}

{% block title %}View Trip{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            overflow: hidden;
            margin-bottom: 30px;
            border: none;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            padding: 20px;
        }
        .card-body {
            padding: 30px;
        }
        .list-group-item {
            padding: 15px 20px;
            border-color: #f0f0f0;
        }
        .list-group-item strong {
            color: #555;
            margin-right: 10px;
        }
        .badge {
            padding: 8px 15px;
            border-radius: 30px;
            font-weight: 500;
        }
        .badge i {
            margin-right: 5px;
        }
        .itineraries-container {
            max-height: 400px;
            overflow-y: auto;
            padding: 15px;
            border: 1px solid #eee;
            border-radius: 10px;
            background-color: #fcfcfc;
        }
        .itinerary-item {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #eee;
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            transition: all 0.3s;
        }
        .itinerary-item:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }
        .itinerary-item h4 {
            color: #0d6efd;
            font-weight: 600;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        .itinerary-details {
            margin-top: 10px;
            color: #666;
        }
        .itinerary-details p {
            margin-bottom: 8px;
        }
        .btn-back {
            margin-bottom: 20px;
        }
        .btn-action {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            margin-right: 10px;
            transition: all 0.3s;
        }
        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .btn-action i {
            margin-right: 8px;
        }
        .section-title {
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
            position: relative;
            display: inline-block;
        }
        .section-title:after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 40px;
            height: 3px;
            background-color: #0d6efd;
        }
    </style>
{% endblock %}

{% block section8 %}

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <a href="{{ path('trip_itinerary_user') }}" class="btn btn-outline-primary btn-back">
                    <i class="fa fa-arrow-left me-2"></i> Back to Trips
                </a>

                {% include "admin/includes/flashes.twig" %}

                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-5">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="text-primary fw-bold">‚úàÔ∏è Trip Details</h2>
                            {% if trip.status == 'Pending' %}
                                <div>
                                    <a href="{{ path('user_update_trip', {'id': trip.id}) }}" class="btn btn-primary btn-action">
                                        <i class="fa fa-edit"></i> Edit Trip
                                    </a>
                                    <a href="{{ path('user_delete_trip', {'id': trip.id}) }}" class="btn btn-danger btn-action" onclick="return confirm('Are you sure you want to delete this trip?')">
                                        <i class="fa fa-trash"></i> Delete Trip
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                        <p class="text-muted mb-4">View your trip details and selected itineraries</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <h3 class="mb-4 fs-5 fw-bold">Trip Information</h3>
                                <ul class="list-group list-group-flush text-start mb-4">
                                    <li class="list-group-item">
                                        <strong>üõ´ Departure:</strong> {{ trip.departure|date('d M Y') }} at {{ trip.departure|date('H:i') }}
                                    </li>
                                    <li class="list-group-item">
                                        <strong>üõ¨ Arrival:</strong> {{ trip.arrivalDate|date('d M Y') }} at {{ trip.arrivalDate|date('H:i') }}
                                    </li>
                                    <li class="list-group-item">
                                        <strong>üí∞ Budget:</strong> {{ trip.budget }}
                                    </li>
                                    <li class="list-group-item">
                                        <strong>üìä Status:</strong>
                                        {% if trip.status == 'Pending' %}
                                            <span class="badge bg-warning bg-opacity-10 text-warning">
                                                <i class="fa fa-clock"></i> Pending
                                            </span>
                                        {% elseif trip.status == 'Approved' or trip.status == 'Accept' %}
                                            <span class="badge bg-success bg-opacity-10 text-success">
                                                <i class="fa fa-check-circle"></i> Approved
                                            </span>
                                        {% elseif trip.status == 'Rejected' or trip.status == 'Canceled' %}
                                            <span class="badge bg-danger bg-opacity-10 text-danger">
                                                <i class="fa fa-times-circle"></i> Rejected
                                            </span>
                                        {% elseif trip.status == 'Completed' %}
                                            <span class="badge bg-info bg-opacity-10 text-info">
                                                <i class="fa fa-flag-checkered"></i> Completed
                                            </span>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <h3 class="mb-4 fs-5 fw-bold">Selected Itineraries</h3>
                                <div class="itineraries-container">
                                    {% for itineraire in itineraires %}
                                        {% if itineraire.id in selectedItineraryIds %}
                                            <div class="itinerary-item">
                                                <h4>{{ itineraire.name }}</h4>
                                                <div class="itinerary-details">
                                                    <p><strong>üìÖ Day Program:</strong> {{ itineraire.dayProgram }}</p>
                                                    <p><strong>üéØ Activities:</strong> {{ itineraire.activity }}</p>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% else %}
                                        <div class="text-center py-4">
                                            <i class="fa fa-info-circle fa-2x text-muted mb-3"></i>
                                            <p>No itineraries selected for this trip.</p>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
