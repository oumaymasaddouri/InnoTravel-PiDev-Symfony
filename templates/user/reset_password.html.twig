<body>
<div class="page-wrapper">
    <div class="wpo-login-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <form class="wpo-accountWrapper" method="post" action="{{ path('reset_password') }}">
                        <div class="wpo-accountInfo"></div>

                        <div class="wpo-accountForm form-style">
                            <div class="fromTitle">
                                <h2>Reset Password</h2>
                                <p>Enter the verification code and your new password</p>
                            </div>

                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }}">{{ message }}</div>
                                {% endfor %}
                            {% endfor %}

                            <div class="form-group">
                                <label for="code">Verification Code</label>
                                <input type="text" name="code" id="code" class="form-control" required placeholder="Enter your 6-digit code">
                            </div>

                            <div class="form-group">
                                <label for="new_password">New Password</label>
                                <input type="password" name="new_password" id="new_password" class="form-control" required placeholder="New password">
                            </div>

                            <div class="form-group">
                                <label for="confirm_password">Confirm New Password</label>
                                <input type="password" name="confirm_password" id="confirm_password" class="form-control" required placeholder="Confirm new password">
                            </div>

                            <div class="form-group">
                                <button type="submit" class="wpo-accountBtn">Reset Password</button>
                            </div>

                            <p class="subText">
                                <a href="{{ path('app_login') }}" style="text-decoration: underline; color: #0e7490;">Back to login</a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('frontoffice/js/jquery.min.js') }}"></script>
